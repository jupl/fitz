{
  "private": true,
  "scripts": {
    "build": "cross-env TS_NODE_PROJECT=tsconfig.base.json node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/gatsby build",
    "build:story": "cross-env TS_NODE_PROJECT=tsconfig.base.json build-storybook -c storybook -o dist/story",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "server": "npm run server:dev",
    "server:dev": "cross-env TS_NODE_PROJECT=tsconfig.base.json node --inspect --no-lazy -r tsconfig-paths/register -r ts-node/register node_modules/.bin/gatsby develop",
    "server:prod": "npm run build && cross-env TS_NODE_PROJECT=tsconfig.base.json node --inspect --no-lazy -r tsconfig-paths/register -r ts-node/register node_modules/.bin/gatsby serve",
    "server:story": "cross-env TS_NODE_PROJECT=tsconfig.base.json start-storybook -c storybook -p 3001",
    "start": "npm run lint && npm test && npm run build",
    "test": "jest",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "@jupl/ts": "0.0.5",
    "cross-env": "^5.2.0",
    "gatsby": "^2.9.2",
    "gatsby-image": "^2.1.4",
    "gatsby-plugin-i18n": "^1.0.1",
    "gatsby-plugin-react-helmet": "^3.0.12",
    "gatsby-plugin-sharp": "^2.1.5",
    "gatsby-plugin-styled-components": "^3.0.7",
    "gatsby-plugin-typescript": "^2.0.15",
    "gatsby-source-filesystem": "^2.0.39",
    "gatsby-transformer-sharp": "^2.1.21",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "styled-components": "^4.3.1",
    "styled-normalize": "^8.0.6",
    "ts-node": "^8.2.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.5.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.4",
    "@storybook/react": "^5.1.4",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^23.3.14",
    "@types/node": "^12.0.8",
    "@types/react": "^16.8.19",
    "@types/react-helmet": "^5.0.8",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.16",
    "@types/webpack": "^4.4.32",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jest-enzyme": "^7.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0"
  }
}
